<div class="new-search-form">
    <div id="errors">

    </div>
    <%= form_for search, url: new_searches_path do |f| %>
    
        <%= f.label :url %><br>
        <%= f.text_field :url, placeholder: "(paste your craigslist link here)" %><br>
        
        <%= f.label :description %><br>
        <%= f.text_area :description, placeholder: "(a short description of the expected items on the page)" %><br>

        <%= f.submit "Define New Search", id: "define_search" %>

    <% end %>
</div>